with "@UTIL_DIR@config";
with "@UTIL_DIR@utilada_sys";
with "mailada";

project MailAda_Tools is

   Use_NLS    : Config.Yes_No := "No";

   for Languages use ("Ada");

   Mains := ("mgrep-main.adb");

   for Source_Dirs use ("tools");

   for Main use Mains;

   for Object_Dir use "./" & Config'Object_Dir & "/obj";
   for Exec_Dir use "./" & Config'Exec_Dir & "/bin";

   package Naming is
      case Use_NLS is
         when "yes" =>
            for Implementation ("Intl")
               use "intl_nls.adb";

         when "no" =>
            for Implementation ("Intl")
               use "intl_none.adb";

      end case;
   end Naming;

   package binder is
      case Config.Mode is
         when "debug" =>
            for Default_Switches ("Ada") use ("-E");

         when others =>
            for Default_Switches ("Ada") use ("-E");

      end case;
   end binder;

   package Builder is
      for Default_Switches ("Ada") use
         Config.Builder'Default_Switches ("Ada");
      for Executable ("mgrep-main.adb") use "mgrep";
   end Builder;
   package Linker is
      for Default_Switches ("Ada") use Config.Linker'Default_Switches ("Ada");
   end Linker;

   package Compiler renames Config.Compiler;

end MailAda_Tools;
